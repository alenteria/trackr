

<p>
  <h3>Title:</3>
  <%=h @post.title %>
</p>

<p class="lead">
 Description: "<%=h @post.description %>" <br /><br />
Author:  <%= image_tag @post.user.pic.url(:thumb) %><b> <%= @post.user.full_name %></b> <br />
</p>

<h4>Comments: </h4>

<% @post.comments.each do |c| %>
<div class="status1">
	
	    <%	name = ''
	    		pic_path = '' 
	    		@user_list.each do |u|
	    			if c.user_id == u.id
	    				name=u.full_name
	    				pic_path = u.pic_file_name
	    			end
	    		end
	    	
	    	 %>
	    	 
	    	 <%= image_tag("/system/pics/#{c.user_id}/thumb/#{pic_path}", :alt => name) %>
	    	<%= time_ago_in_words(c.created_at) %> ago
		  	 <b><%= name%> said: </b><%=h c.message %>
			
	  	
			
		
		
		  
		 
	 
</div>	
  
<% end %>

<%= form_for [@post, Comment.new] do |f| %>
<div class="status">
	<%= f.hidden_field :user_id, :value=>current_user.id%>
    <%= f.text_area :message, :rows=> "3" %><br />

     <%= f.submit "Add Comment" %>
 </div>

  
  

<% end %>
