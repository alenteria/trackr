

<html>
<head>
  <title>Trackr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
   
</head>
<body onLoad="document.getElementById('AutoLink').click();document.getElementById('AutoLink2').click();" >

	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Trackr</a>
          <div class="nav-collapse collapse">
          	
          	<% if user_signed_in? %>
            <ul class="nav">
	            <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
	            <li class="<%= 'active' if current_page?(posts_path) %>"><%= link_to "Dashboard", posts_path %></li>
	            <li class="<%= 'active' if current_page?(categories_path) %>"><%= link_to "Category", categories_path %></li>
	            <li class="<%= 'active' if current_page?(statuses_path) %>"><%= link_to "Status", statuses_path, class:"active" %></li>
            </ul>
		    <% end %>  
		       
		    <ul class="nav pull-right">
		    	<% if user_signed_in? %>
		    	
		    	<li><%= link_to current_user.full_name, edit_user_registration_path, :method => :get %></li>
		    	<li><%= image_tag current_user.pic.url(:thumb) %></li>
		    	 <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
		    	<% end %>
		    </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
	
	
	<div class="container">	
		
		
		<% flash.each do |type, message| %>
			 <div class="alert <%= flash_class type %>">
		    	<button class="close" data-dismiss="alert" >x</button>
		    	<%= message %>
		    </div>
		<% end %>
		
		<%= yield %>
 	</div>
 	</body>
</html> 	

